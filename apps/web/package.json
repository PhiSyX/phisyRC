{
	"name": "@phisyrc/web",
	"version": "1.0.0",
	"author": "Mike 'PhiSyX' S.",
	"license": "MPL 2.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "pnpm run wasm:build && pnpm run vue:build",
		"vue:build": "vue-tsc && vite build",
		"wasm:build": "cd wasm && wasm-pack build --release --target bundler --out-dir ../assets/wasm",
		"check:fmt": "rome format src std types vue",
		"test:unit:watch": "vitest",
		"test:unit": "vitest run",
		"test:unit-coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@phisyrc/css": "workspaces",
		"@phisyrc/std": "workspaces",
		"@phisyrc/types": "workspaces",
		"focus-trap": "^7.1.0",
		"pinia": "^2.0.23",
		"vue": "^3.2.41",
		"vue-router": "^4.1.6"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "^3.2.0",
		"@vitest/coverage-c8": "^0.25.3",
		"rome": "0.10.1-next",
		"sass": "^1.55.0",
		"typescript": "^4.9.3",
		"vite": "^3.2.0",
		"vite-plugin-top-level-await": "^1.2.1",
		"vite-plugin-wasm": "^3.1.0",
		"vitest": "^0.25.2",
		"vue-tsc": "^1.0.9"
	}
}
