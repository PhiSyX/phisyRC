{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~vue/*": ["vue/*"],
			"~/*": ["src/*"]
		}
	},
	"include": ["types/**/*.d.ts", "**/*.ts", "**/*.vue"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
